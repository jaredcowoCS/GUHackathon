<% if !current_user.shop.present? %>
    <h3 class="text-center">You don't have a shop</h3>
    <p class="text-center"><%= link_to "Create Shop", new_shop_path, class: "btn btn-secondary" %></p>
<% end %>

<% if current_user.shop.present? %>
    <h3 class="text-center"><%= current_user.shop.name %></h3>
    <h3 class="text-center">No Products</h3>
<% end %>