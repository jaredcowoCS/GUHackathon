<div class="col-md-7 box center-block purchase-new">
	<h3 class="text-center">Purchase Details</h3>
	<h4 class="text-center">Your Balance: <%= humanized_money_with_symbol(current_user.balance.amount_cents) %></h4><br>
	<div class="row purchase-details">
		<div class="col-md-7 text-center">
			<%= image_tag(@product.product_image_url(:normal)) if @product.product_image? %>
		</div>
		<div class="col-md-5 ">
			<h4><%= @product.name %></h4>
			<h4 class="price"><%= humanized_money_with_symbol(@product.price_cents)%></h4>
			<h4>Seller: <%= @product.user.email %></h4>
			<%= form_for [@product, @purchase] do |f| %>
				<h4>Would you like delivery?</h4>
					<div class="form-group">
						<%= check_box_tag('deliver', value = "1", checked = false, options = {}) %>
						<%= label_tag "Delivery via BPMS" %>
						<p>If checked, BPMS will contact you for further details.</p>
					</div>
				<div class="input-group">
				   <span class="input-group-btn">
						<%= f.submit "Buy Via Balance", class: "btn btn-secondary form-control" %>
					</span>
				</div>
			<% end %>
		</div>
	</div>
	<hr>
	<div class="row">
		<div class="col-md-6 center-block">
			<h4>Other Payment Methods</h4>
			<div class="form-group">
			<%= check_box_tag('deliver', value = "1", checked = false, options = {}) %>
			<%= label_tag "Credit/Debit Card" %>
			</div>
			<div class="form-group">
				<%= check_box_tag('deliver', value = "1", checked = false, options = {}) %>
				<%= label_tag "Local Meet Up" %>
			</div>
			<%= link_to "Proceed", "#", class: "btn btn-secondary form-control" %>
		</div>
	</div>
	
	
</div>