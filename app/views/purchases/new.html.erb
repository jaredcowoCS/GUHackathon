<div class="col-md-6 box center-block text-center">
	<h3>Purchase Details</h3><br>
	<div class="row purchase-details">
		<div class="col-md-7 pull-left">
			<%= image_tag(@product.product_image) if @product.product_image? %>
		</div>
		<div class="col-md-5">
			<h4><strong><%= @product.name %></strong></h4>
			<h4><%= humanized_money_with_symbol(@product.price_cents)%></h4>
			<h4>Quanitity: <%= @product.quantity %></h4>
		</div>
	</div>
	<%= form_for [@product, @purchase] do |f| %>
		<div class="input-group">
		   <span class="input-group-btn">
				<%= f.submit "Confirm", class: "btn btn-secondary form-control" %>
			</span>
		</div>
	<% end %>
</div>