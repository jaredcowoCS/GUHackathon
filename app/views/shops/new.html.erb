<div class="col-md-6 center-block">
    <div class="box">
        <h3 class="text-center">Setup your new shop</h3>
        <%= form_for @shop do |f| %>
            <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name, class: "form-control", placeholder: "Give your shop a name"%>
            </div>
            <%= f.submit "Create Shop", class: "btn btn-primary form-control" %>
        <% end %>
    </div>
</div>