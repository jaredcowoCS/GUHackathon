
<div class="banner">
	<div class="headline">
		<h2 class="text-center">Register today to create your own shop & starting making money locally</h2>
		<% if user_signed_in? %>
		    <%= link_to "Dashboard", dashboard_path, class: "btn btn-secondary btn-lg" %>
		<% else %>
			<%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary btn-lg" %>
		    <%= link_to "Sign In", new_user_session_path, class: "btn btn-secondary btn-lg" %>
		<% end %>
	</div>
	<%= image_tag "banner" %>
</div>

<div class="row latest">
	<h3 class="text-center row-title">Latest</h3>
	<% Product.order("created_at DESC").each do |product| %>
	<div class="col-md-3 text-center">
		<div class="product-wrapper">
			<%= image_tag(product.product_image.normal) if product.product_image? %>
			<h4><%= link_to product.name, product_path(product) %></h4>
			<h4><%= humanized_money_with_symbol(product.price_cents) %></h4>
			<h5><%= product.user.email %></h5>
			<%= link_to "Buy", new_product_purchase_path(product), class: "btn btn-primary form-control" %>
		</div>
	</div>
	<% end %>
</div>

