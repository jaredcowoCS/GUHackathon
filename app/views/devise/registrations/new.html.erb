<div class="col-md-6 center-block devise-form">
  <div class="box">
    <h2 class="text-center">Register</h2><br>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :address %>
        <p class="gray">Please enter the address you currently live at. This information is important for delivery compatibility.</p>
        <%= f.text_field :address, class: "form-control", placeholder: "eg. Santa Elena, Cayo or Ladyville, Belize" %>
      </div>

      <div class="form-group">
        <%= f.label :phone, "Phone Number" %>
        <p class="gray">No other user will be able to see this information. It will also be used for our delivery integration.</p>
        <%= f.text_field :phone, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Sign up", class: "form-control btn btn-secondary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
